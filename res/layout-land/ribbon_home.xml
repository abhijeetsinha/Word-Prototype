<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:layout_height="wrap_content"
        	android:layout_width="fill_parent"
        	android:orientation="vertical">
        
    <LinearLayout
        android:id="@+id/home_ribbon"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp">
    
        <Spinner
		    android:id="@+id/spinner_fontface"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
        <Spinner
		    android:id="@+id/spinner_fontsize"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
        <ImageButton 
            android:id="@+id/button_bold"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/bold2"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_italic"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/italic2"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_underline"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/underline2"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_superscript"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/superscript"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_subscript"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/subscript"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_textcolor"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/text_color"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_highlight"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/highlight"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_bullets"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/bullets"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_numbering"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/numbering"
    		style="?android:attr/borderlessButtonStyle"/>
        <ImageButton 
            android:id="@+id/button_leftalign"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/leftalign"
    		style="?android:attr/borderlessButtonStyle"/>
         <Spinner
		    android:id="@+id/spinner_textstyles"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
         <ImageButton 
            android:id="@+id/button_find"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/find"
    		style="?android:attr/borderlessButtonStyle"/>
      
        
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/bold_ribbon_lines"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <View
		    android:layout_width="590dp"
		    android:layout_height="1dip"
		    android:background="#111111"
		    android:layout_marginRight="20dp" />
        <View 
            android:layout_width="170dp"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginRight="20dp"/>
        <View 
            android:layout_width="90dp"
            android:layout_height="1dip"
            android:background="#000000"
            android:layout_marginRight="20dp"/>
        <View 
            android:layout_width="40dp"
            android:layout_height="1dip"
            android:background="#000000"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/bold_ribbon_categories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
        <TextView 
            android:text="@string/font"
            android:textSize="12sp"
            android:layout_width="590dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>
        <TextView 
            android:text="@string/paragraph"
            android:textSize="12sp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>
        <TextView 
            android:text="@string/styles"
            android:textSize="12sp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>
        <TextView 
            android:text="@string/find"
            android:textSize="12sp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>
 
    </LinearLayout>
    
  </LinearLayout>